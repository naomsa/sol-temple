{
  "name": "onigiri-kitchen",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "files": [
    "contracts/"
  ],
  "scripts": {
    "test": "cross-env TS_NODE_TRANSPILE_ONLY=1 hardhat test",
    "test:gas": "cross-env REPORT_GAS=true yarn test",
    "clean": "shx rm -rf artifacts/ cache/ coverage/ typechain/ coverage.json",
    "build": "cross-env TS_NODE_TRANSPILE_ONLY=1 yarn clean && hardhat compile",
    "deploy": "hardhat run scripts/deploy.ts",
    "format": "prettier --config ./.prettierrc.yaml --write \"**/*.{js,json,md,sol,ts}\"",
    "format:check": "prettier --config ./.prettierrc.yaml --check \"**/*.{js,json,md,sol,ts}\"",
    "lint": "yarn lint:sol && yarn lint:ts && yarn prettier:check",
    "lint:sol": "solhint \"contracts/**/*.sol\"",
    "lint:ts": "eslint --ext .js,.ts .",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^2.1.3",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.3.0",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.4.13",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "chai": "^4.2.0",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.0.0",
    "hardhat": "^2.7.0",
    "hardhat-gas-reporter": "^1.0.4",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "pinst": "^2.1.6",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "shx": "^0.3.3",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.16",
    "ts-node": "^10.1.0",
    "typechain": "^5.1.2",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.4.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
